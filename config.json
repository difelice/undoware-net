{
  "output": "build/undoware/",
  "locals": {
    "base":     "https://undoware.ca/",
    "ownurl":   "https://undoware.ca/",
    "owner":    "Undoware",
    "name":     "Undoware.ca",
    "cdn":      "https://undoware-cdn.appspot.com",
    "description": "tech blog",
    "language": { "code": "en-CA", "name": "English" },
    "sitemap": [
      {
        "href": "/who/",
        "menu": {
          "name" : "Who",
          "class": "who"
        }
      },{
        "href": "/timeline/",
        "menu": {
          "name" : "Timeline",
          "class": "timeline"
        }
      }
    ],
    "loader": {
        "src":  "https://cdnjs.cloudflare.com/ajax/libs/require.js/2.1.8/require.min.js",
        "config": {
          "baseUrl":        "/",
          "paths": { "ng":           "https://ajax.googleapis.com/ajax/libs/angularjs/1.2.3/angular.min" },
          "deps": [
            "ng",
            "stock"
          ]
        }
    },
    "scale": {
      "initial":  "0.8",
      "max":      "1.1",
      "user":     true
    }
  },
  "plugins": [ "./plugins/paginator.coffee" ],
  "require": {
    "moment": "moment",
    "cheerio": "cheerio",
    "_": "underscore",
    "typogr": "typogr"
  },
  "jade": {
    "pretty": true
  },
  "markdown": {
    "smartLists": true,
    "smartypants": true
  },
  "paginator": {
    "perPage": 3
  }
}
