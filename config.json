{
  "locals": {
    "base":     "http://send.app/",
    "cdn":      false,
    "name":     "Send.app",
    "icon":     "rocket",
    "ownurl":   "https://www.medextra.com/",
    "owner":    "MedExtra",
    "color": {
      "class": {
        "menu": {
          "bar": "blue"
        }
      }
    },
    "language": { "code": "en-CA", "name": "English" },
    "sitemap": [
      {
        "href": "/",
        "menu": {
          "name" : "Quick Send",
          "class": "file",
          "icon": "coffee"
        }
      },      {
        "href": "/share/",
        "menu": {
          "name" : "Share",
          "class": "share",
          "icon": "cloud-upload"
        }
      }
    ],
    "loader": {
      "src":  "https://cdnjs.cloudflare.com/ajax/libs/require.js/2.1.8/require.min.js",
      "config": {
        "baseUrl": "/",
        "paths": {
          "ink":          "ink.min",
          "ink-ui":       "ink-ui.min",
          "modernizr":    "https://cdnjs.cloudflare.com/ajax/libs/modernizr/2.6.2/modernizr.min",
          "jq":           "https://cdnjs.cloudflare.com/ajax/libs/jquery/2.0.3/jquery.min",
          "ng":           "https://ajax.googleapis.com/ajax/libs/angularjs/1.2.4/angular.min",
          "ng-cookies":   "//ajax.googleapis.com/ajax/libs/angularjs/1.2.4/angular-cookies.js"
        },
        "deps": [
          "jq",
          "ng",
          "ink",
          "stock"
        ]
      }
    },
    "scale": {
      "initial": "1.0",
      "max": "1.0",
      "user": 0
    }
  },
  "require": {
    "cheerio": "cheerio"
  },
  "jade": {
    "pretty": true
  },
  "markdown": {
    "smartLists": true,
    "smartypants": true
  },
  "output": "build/send/",
  "plugins": [ "wintersmith-ls",
               "wintersmith-stylus" ]
}
