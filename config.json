{
  "output": "build/undoware/",
  "locals": {
    "path": {
      "css" : "style",
      "js"  : "logic",
      "png" : "raster",
      "jpg" : "raster",
      "png" : "raster",
      "svg" : "vector",
      "pdf" : "vector",
      "woff": "font",
      "eot" : "font",
      "ttf" : "font"
    },
    "base":     "https://undoware.ca",
    "ownurl":   "https://undoware.ca",
    "owner":    "Undoware",
    "name":     "Undoware.ca",
    "cdn":      "https://undoware-cdn.appspot.com",
    "description": "Personal blog of Liz Mars, focus on technology ethics, security, human rights, UX.",
    "language": { "code": "en-CA", "name": "English" },
    "sitemap": [
      {
        "href": "/who/",
        "menu": {
          "name" : "Who",
          "class": "who"
        }
      },{
        "href": "/archive/",
        "menu": {
          "name" : "Archive",
          "class": "archive"
        }
      },{
        "href": "/cv/",
        "menu": {
          "name" : "C.V.",
          "class": "cv"
        }
      },
      {
        "href": "/portfolio/",
        "menu": {
          "name" : "Portfolio",
          "class": "portfolio"
        }
      }

    ],
    "loader": {
        "src":  "https://cdnjs.cloudflare.com/ajax/libs/require.js/2.1.8/require.min",
        "config": {
          "paths"  : { "ng": "https://ajax.googleapis.com/ajax/libs/angularjs/1.2.3/angular.min" },
          "deps"   : [ "ng", "site", "logo" ]
        }
    },
    "scale": {
      "initial":  "0.6",
      "max":      "0.6",
      "user":     false
    }
  },
  "plugins": [
      "./plugins/paginator.coffee",
      "wintersmith-ls",
      "wintersmith-stylus"
  ],
  "require": {
    "moment": "moment",
    "cheerio": "cheerio",
    "_": "underscore",
    "typogr": "typogr"
  },
  "jade": {
    "pretty": true
  },
  "markdown": {
    "smartLists": true,
    "smartypants": true
  },
  "paginator": {
    "perPage": 3
  }
}
