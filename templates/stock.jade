doctype html
html(lang=locals.language.code,itemscope,itemtype="http://schema.org/Article")
  head
    include logic
    include meta
    include link
    include icon
    include style
    block head
    title
      block title
      | - !{locals.name}

  body.ink-grid#body
    div#page
      header.area.header(role='heading')
        block header
      main.area.main(role='main')
        block content
      footer.area.footer(role='complementary')
        block footer
