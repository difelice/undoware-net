// icon.jade

include util

- var p = png('icon');
- var s = svg('icon');

link(rel="icon",            href=s)
link(rel="favicon",         href=p + '?16' )
link(rel="image_src",       href=s)
link(rel="apple-touch-icon",href=s)
each i in [ 57, 72, 114 ]
  - var q       = '?' + i;
  - var sz_str  =  i + 'x' + i;
  link(rel="shortcut icon"   ,type="image/png",sizes=sz_str, href=p + q)
  link(rel="apple-touch-icon",type="image/png",sizes=sz_str, href=p + q)
