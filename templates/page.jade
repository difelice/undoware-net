// page.jade -- last stop before rendering.

include(util)



append head
  +css(page.metadata.style)
  +js(page.metadata.logic + '.js')


append content
    header.white
      div.push-right
        a(html=/help.html)
      if (locals.owner)
        h1.vspace
          span
            if (locals.ownurl)
              a(href=locals.ownurl)=locals.owner
            else
              | !{locals.owner}
          span.logo
            if (locals.icon)
              - var iconClass = 'icon-' + locals.icon;
              | &nbsp;
              i(class=iconClass)
              | &nbsp;
            | !{locals.name}
      include navigation
      h2.title= page.title

    main.white
      | !{page.html}

    footer.footer
      h6 Â© MedExtra 2013 All Rights Reserved.
      h6 Questions? Problems? <a href="mailto:emarston@medextra.com">Email.</a>

extends site
