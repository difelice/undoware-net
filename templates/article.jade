

block append vars
  - bodyclass = 'article-detail'

block prepend title
  | #{ page.title + " - "}

block append header
  include facebook-sdk.html

block content-header
  h2= page.title
  h4.date= moment(page.metadata.date).format('dddd YYYY-MM-DD HH:mm Z')
  h4 from the #{page.metadata.dept} dept.

block content
  article.article
    section.content!= typogr(page.html).typogrify()
    footer
      div.zcommand &nbsp;
      include flattr.html
      include twitter-share.html
      include reddit.html
      include facebook-like.html
      include gplus.html
      include disquotheque.html
      include cc-by-sa.html

