
extends page


block prepend title
  | !{ page.title }


block content
  article.article
    h3
      | !{ page.title }  
    h4.date= moment(page.metadata.date).format('dddd YYYY-MM-DD HH:mm Z')
    h4 from the #{page.metadata.dept} dept.
    if (page.metadata.poster)
      figure.poster
        if (page.metadata.alt)
          img(src=page.metadata.poster,alt=page.metadata.alt)
        else
          img(src=page.metadata.poster)
        if (article.metadata.caption || article.metadata.credit)
          figcaption
            if (article.metadata.caption)
              h5.caption !{article.metadata.caption}
            if (article.metadata.credit)
              h6.credit
                if(article.metadata.credit-url)
                  a(href=article.metadata.credit-url)=article.metadata.credit
                else
                  | !{article.metadata.credit}

    section.content!= typogr(page.html).typogrify()
    footer
      div.zcommand &nbsp;
      include twitter-share.html
      include reddit.html
      include gplus.html
      include cc-by-sa.html

